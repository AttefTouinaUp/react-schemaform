{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "removeComments": true,
    "outDir": "./dist/",
    "allowUnreachableCode": false
  },

  "exclude": [
    "node_modules",
    "dist",
    "docs/dist"
  ],

  "compileOnSave": false
}
