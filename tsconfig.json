{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES5",
    "sourceMap": true,
    "declaration": true,
    "allowJs": false,
    "jsx": "react",
    "removeComments": true,
    "outDir": "lib",
    "allowUnreachableCode": false
  },

  "exclude": [
    "node_modules/",
    "lib/",
    "docs/lib/"
  ],

  "compileOnSave": false
}
